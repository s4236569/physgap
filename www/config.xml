<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.mmcclintock.physgap"
        version     = "1.2.1">

    <name>PhysGap</name>

    <description>
        Trial PhoneGap application that allows first year physics students to view some sample "mobile based" material.
    </description>

    <author email="michael.ross.mcclintock@gmail.com">
        Michael McClintock
    </author>

    <preference name="phonegap-version" value="2.0.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="permissions"      value="none" />
    
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="false" />

    <icon src="icon.png" width="256" height="256" />
    <icon src="static/icons/ios/icon.png" width="57" height="57" />
    <icon src="static/icons/ios/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="static/icons/ios/icon-114.png" width="114" height="114" />
    <icon src="static/icons/android/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="static/icons/android/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="static/icons/android/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="static/icons/android/xhdpi.png" gap:platform="android" gap:density="xhdpi" />
    <icon src="static/icons/windows/icon.png" gap:platform="winphone" />
    <icon src="static/icons/windows/background.png" gap:platform="winphone" gap:role="background" />
    <icon src="static/icons/bb/icon.png" gap:platform="blackberry" />
    <icon src="static/icons/webos/icon.png" gap:platform="webos" />

</widget>
